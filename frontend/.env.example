# ─── Backend API ──────────────────────────────────────────────────────────────
# Base URL of the Chioma backend (used for server-side API routes and client fetches)
NEXT_PUBLIC_API_URL=http://localhost:3000

# ─── Application ──────────────────────────────────────────────────────────────
# The URL this frontend is served from (used by the backend for CORS & password-reset links)
NEXT_PUBLIC_APP_URL=http://localhost:3001

# ─── Stellar / Soroban ────────────────────────────────────────────────────────
# Which Stellar network to connect to: "testnet" or "mainnet"
NEXT_PUBLIC_STELLAR_NETWORK=testnet

# Soroban RPC endpoint for on-chain reads
NEXT_PUBLIC_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org

# Horizon REST API for Stellar account & transaction queries
NEXT_PUBLIC_STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# Deployed Chioma smart-contract address on Stellar/Soroban
NEXT_PUBLIC_CHIOMA_CONTRACT_ID=

# ─── IPFS / Pinata ────────────────────────────────────────────────────────────
# Public Pinata gateway for serving IPFS-pinned property images
NEXT_PUBLIC_PINATA_GATEWAY=gateway.pinata.cloud
